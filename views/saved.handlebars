<h1>Digg.com Saved Articles</h1>
{{#if articles.length}}
<ul class="list-group">
    {{#each articles}}
    <li class="list-group-item">
        <h5 class="mb-1"><a href="{{link}}">{{title}}</a></h5>

        <p class="mb-1">{{description}}</p>
        <button type="button" class="btn btn-danger delete-note delete" data-article-id="{{_id}}">Delete</button>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal-{{_id}}">
            Notes
        </button>
        <div id="modal-{{_id}}" class="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Article Notes</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="list-group">
                            {{#each notes}}
                            <div class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <span>{{body}}</span>
                                    <button type="button" class="btn btn-danger delete-note"
                                        data-article-id="{{../_id}}" data-note-id="{{_id}}">Delete</button>
                                </div>
                            </div>
                            {{/each}}
                        </div>

                        <br />
                        <textarea id="note-{{_id}}" class="form-control" rows="3"
                            placeholder="Add text for new note"></textarea>
                        <br />
                        <button type="button" class="btn btn-primary create-note" data-article-id="{{_id}}">Create
                            Note</button>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
    </li>
    {{/each}}
</ul>
<div id="deleted-modal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Deleted</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Your article was deleted.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary refresh-page">Close</button>
            </div>
        </div>
    </div>
</div>
<div id="created-note-modal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Created Note</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Your note was created.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary refresh-page">Close</button>
            </div>
        </div>
    </div>
</div>
{{else}}
<h3>Sorry, no articles are saved. Please scrape first.</h3>
<button type="button" class="btn btn-primary" onclick="document.location.href='/scrape'">Scrape</button>
{{/if}}